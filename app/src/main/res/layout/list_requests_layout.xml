<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:cardCornerRadius="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/nameRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:text="Название заявки"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/labelType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameRequest"
            android:text="Тип заявки: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/typeRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toEndOf="@id/labelType"
            android:layout_alignBaseline="@+id/labelType"
            android:text="Пример_тип_заявки"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typeRequest"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Адрес: "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/cityInRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="город"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/streetInRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="улица"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/houseInRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="дом, номер"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/labelDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:text="Дата: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dateAndTimeRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/labelDate"
            android:layout_alignBaseline="@+id/labelDate"
            android:text="Дата, время"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/labelPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateAndTimeRequest"
            android:text="Участники: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/participantsRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/labelPart"
            android:layout_toEndOf="@+id/labelPart"
            android:text="кол-во"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>