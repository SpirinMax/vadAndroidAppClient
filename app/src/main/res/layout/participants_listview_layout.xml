<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:cardCornerRadius="15dp"
    android:backgroundTint="@color/white_bezn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImagePart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="25dp">
            <ImageView
                android:id="@+id/imagePart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/surnamePart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@+id/cardImagePart"
            android:text="Фамилия"
            android:layout_alignBaseline="@+id/cardImagePart"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/namePart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/surnamePart"
            android:layout_toEndOf="@id/surnamePart"
            android:layout_centerVertical="true"
            android:text="Имя"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>